---
import ArrowRight from "phosphor-astro/ArrowRight.astro";
---

<section
    class="relative min-h-[750px] flex items-center justify-center overflow-hidden"
>
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 w-full h-full z-0">
        <img
            src="/hero-bg.png"
            alt="Music Studio"
            class="w-full h-full object-cover select-none"
        />
        <div
            class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-base-100 transition-colors duration-300"
        >
        </div>
    </div>

    <!-- Animated Equalizer (Bottom) -->
    <div
        class="absolute bottom-0 left-0 right-0 h-64 flex items-end justify-center gap-2 lg:gap-3 opacity-30 pointer-events-none z-0 px-4"
    >
        <div
            class="w-3 md:w-6 bg-primary/80 rounded-t-md animate-equalizer-1 h-full shadow-[0_0_15px_rgba(var(--p),0.5)]"
        >
        </div>
        <div
            class="w-3 md:w-6 bg-secondary/80 rounded-t-md animate-equalizer-2 h-full shadow-[0_0_15px_rgba(var(--s),0.5)]"
        >
        </div>
        <div
            class="w-3 md:w-6 bg-accent/80 rounded-t-md animate-equalizer-3 h-full"
        >
        </div>
        <div
            class="w-3 md:w-6 bg-primary/80 rounded-t-md animate-equalizer-4 h-full shadow-[0_0_15px_rgba(var(--p),0.5)]"
        >
        </div>
        <div
            class="w-3 md:w-6 bg-secondary/80 rounded-t-md animate-equalizer-5 h-full shadow-[0_0_15px_rgba(var(--s),0.5)]"
        >
        </div>

        <div
            class="w-3 md:w-6 bg-white/50 rounded-t-md animate-equalizer-3 h-full"
        >
        </div>

        <div
            class="w-3 md:w-6 bg-secondary/80 rounded-t-md animate-equalizer-5 h-full shadow-[0_0_15px_rgba(var(--s),0.5)]"
        >
        </div>
        <div
            class="w-3 md:w-6 bg-primary/80 rounded-t-md animate-equalizer-4 h-full shadow-[0_0_15px_rgba(var(--p),0.5)]"
        >
        </div>
        <div
            class="w-3 md:w-6 bg-accent/80 rounded-t-md animate-equalizer-3 h-full"
        >
        </div>
        <div
            class="w-3 md:w-6 bg-secondary/80 rounded-t-md animate-equalizer-2 h-full shadow-[0_0_15px_rgba(var(--s),0.5)]"
        >
        </div>
        <div
            class="w-3 md:w-6 bg-primary/80 rounded-t-md animate-equalizer-1 h-full shadow-[0_0_15px_rgba(var(--p),0.5)]"
        >
        </div>
    </div>

    <div
        class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center z-10"
    >
        <div class="animate-fade-in-up">
            <span
                class="inline-block py-1 px-4 rounded-full bg-white/10 text-white text-sm font-semibold mb-6 border border-white/20 backdrop-blur-md shadow-lg"
            >
                THE #1 MUSIC PRODUCTION COMMUNITY
            </span>
            <h1
                class="text-5xl md:text-7xl lg:text-8xl font-black mb-8 leading-tight tracking-tighter text-white drop-shadow-2xl"
            >
                Welcome to <br class="hidden md:block" />
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-secondary drop-shadow-lg"
                    >Rythm Nation</span
                >
            </h1>
            <p
                class="text-xl md:text-2xl text-gray-200 mb-10 max-w-2xl mx-auto leading-relaxed drop-shadow-md font-light"
            >
                Your ultimate destination for music production insights, studio
                tips, and creative inspiration.
            </p>
            <div
                class="flex flex-col sm:flex-row gap-5 justify-center items-center"
            >
                <a
                    href="/blog"
                    class="btn btn-primary btn-lg border-none shadow-[0_0_20px_rgba(var(--p),0.4)] hover:shadow-[0_0_30px_rgba(var(--p),0.6)] hover:scale-105 transition-all duration-300 no-underline px-10 text-lg rounded-full"
                >
                    Explore Blog
                    <ArrowRight class="h-6 w-6 ml-2" />
                </a>
                <a
                    href="/about"
                    class="btn btn-lg bg-white/10 border border-white/20 hover:bg-white/20 text-white backdrop-blur-md shadow-[0_0_20px_rgba(255,255,255,0.2)] hover:shadow-[0_0_30px_rgba(255,255,255,0.4)] hover:scale-105 transition-all duration-300 no-underline px-10 text-lg rounded-full"
                >
                    Learn More
                </a>
            </div>
        </div>
    </div>
</section>
